<div class="card full-card">
  <h3 class="trip-title"><%= trip.title %></h3>
  <div class="trip-activities">
    <% trip.visits.each do |visit| %>
      <%= image_tag visit.activity.photo, class: "trip-photo" %>
    <% end %>
  </div>
  <div class="trip-details hidden">
    <div class="trip-sent-status">
      <% if trip.sent %>
        <%= mail_to User.find(trip.tourist_id).email, 'Send Again <i class="fa fa-send status-green" aria-hidden="true"></i>'.html_safe, class: "white"%>
      <% else %>
        <%= mail_to User.find(trip.tourist_id).email, 'Send Now! <i class="fa fa-send status-red" aria-hidden="true"></i>'.html_safe, class: "white"%>
      <% end %>
    </div>
    <div class="trip-date">
      <%= trip.date.strftime('%A %B %e, %Y') %>
    </div>
    <div class="trip-actions">
      <%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe, edit_trip_path(trip) %>
      <%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe, trip_path(trip),
        method: :delete,
        data: { confirm: "Are you sure you want to delete this trip?" } %>
    </div>
  </div>

  <!-- Large modal -->
  <a  class="card-link" data-toggle="modal" data-target="[data-trip-id='<%= trip.id %>']"></a>
  <%= render 'shared/modal', trip: trip %>
</div>
