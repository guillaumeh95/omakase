<div id="activities-one" class="card-activities-filtered-with-title">
  <div class="card-activities-title text-center pink-bg">
    <%= "Choose a #{capitalize_each_word(trip.filters[0].gsub('_', " "))} activity" %>
  </div>
  <% if activity_one %>
    <div id="activities-one-selected" class="card-activities-filtered stretch">
      <%= render "shared/card_activities", trip: trip, activity: activity_one, clicked: true %>
    </div>
  <% else %>
    <div id= "activities-one-filtered" class="card-activities-filtered">
      <% activities_one.each do |activity| %>
        <%= render "shared/card_activities", activity: activity, trip: trip, clicked: false %>
      <% end %>
    </div>
  <% end %>
</div>

