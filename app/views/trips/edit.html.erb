<div class="activities-container">
  <div class="card-activities-all">
    <div id="activities-one" class="card-activities-filtered-with-title">
      <div class="card-activities-title text-center pink-bg">
        <%= "Choose a #{@trip.filters[0].split("_").map(&:capitalize).join(' ')} activity" %>
      </div>
      <div id= "activities-one-filtered" class="card-activities-filtered">
        <% @activities_one.each do |activity| %>
            <div class="card-activity-unit one" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.3)), url('<%= activity.photo %>');" data-activity-id='<%= activity.id %>'>
              <div class="card-activity-description" >
                <h2><%= activity.title %></h2>
                <p><%= activity.name %></p>
              </div>
            </div>
        <% end %>
      </div>
      <div id="activities-one-clicked" class="card-clicked one hidden">
        <div class= "card-alone" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.3)), url('<%= @activities_one.last.photo %>');" data-activity-id='<%= @activities_one.last.id %>'>
          <div class="card-activity-description" >
            <h2><%= @activities_one.last.title %></h2>
            <p><%= @activities_one.last.name %></p>
            <p><%= @activities_one.last.address %></p>
            <p><%= "€" %></p>
            <p><%= "Original" %></p>
            <p><%= link_to "Website", @activities_one.last.website %></p>
          </div>
        </div>
      </div>
    </div>

    <div id="activities-two" class="card-activities-filtered-with-title hidden">
