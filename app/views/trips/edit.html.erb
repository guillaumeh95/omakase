<%= render "shared/navbar" %>

<div class="activities-container">
  <div id="card-activities-all">
    <%= render "trips/activities", trip: @trip, activities_one: @activities_one, activities_two: @activities_two, activities_three: @activities_three, activity_one: @activity_one, activity_two: @activity_two, activity_three: @activity_three %>
  </div>
  <div class="submit-edit-trip">
    <span>
      <%= link_to "Save & Send Later", trip_path(@trip), class:"btn-primary", method:"patch" %>
    </span>
    <span>
      <% if @activity_three %>
        <%= link_to "Send to Friend", trip_path(@trip), class:"btn-primary last-btn", method:"patch" %>
      <% end %>
    </span>
  </div>
</div>
