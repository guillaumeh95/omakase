          <div class="card-activity-description" >
            <h2><%= @activities_two.last.title %></h2>
            <p><%= @activities_two.last.name %></p>
            <p><%= @activities_two.last.address %></p>
            <p><%= "€" %></p>
            <p><%= "Original" %></p>
            <p><%= link_to "Website", @activities_two.last.website %></p>
          </div>
        </div>
      </div>
    </div>

    <div id="activities-three" class="card-activities-filtered-with-title hidden">
      <div class="card-activities-title text-center purple-bg">
        <%= "Choose a #{@trip.filters[2].split("_").map(&:capitalize).join(' ')} activity" %>
