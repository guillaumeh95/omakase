<%= render 'shared/navbar' %>
<div class="container">
  <div class="form-post">

<!-- Progress bar -->
  <div class="progress">
    <div class="circle done active" id="circle1">
      <span class="label">1</span>
      <span class="title">General</span>
    </div>
    <span class="bar"></span>
    <div class="circle" id="circle2">
      <span class="label">2</span>
      <span class="title">More</span>
    </div>
    <span class="bar"></span>
    <div class="circle" id="circle3">
      <span class="label">3</span>
      <span class="title">Profiles</span>
    </div>
  </div>
<!-- PROFILE FORM -->
    <%= simple_form_for [@trip] do |f| %>
<!-- GENERAL INFORMATION -->
    <div id="step1" class="step active">
      <div class="row">
        <div class="col-xs-offset-2 col-xs-8 ">
        <h4> <i class="fa fa-address-book-o" aria-hidden="true"></i> First, some general information </h4>
          <div class="form-group">
            <%= f.input :tourist_first_name, label: "What's your friend's first name?", placeholder: "Hector", class:"form-inline"%>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-offset-2 col-xs-8">
          <div class="form-group">
            <%= f.input :tourist_last_name, label: "And last name?", placeholder: "Louvot", class:"form-inline"%>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-offset-2 col-xs-8">
          <div class="form-group">
            <%= f.input :tourist_email, label: "What's your friend's email address?", placeholder: "hector.louvot@gmail.com" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-offset-2 col-xs-8">
          <div class="form-group">
            <%= f.input :date, label: "When is your friend coming?", as: :string, required: false, input_html: {class: "datepicker"}, placeholder: "December 22, 2017"%>
          </div>
        </div>
      </div>
    <button class="next-btn" data-next="step2" data-circle="circle2">Next</button>
    </div>
<!--  MORE INFORMATION - KNOWLEDGE + BUDGET -->
    <div id="step2" class="step">
      <div class="row">
        <div class="col-xs-offset-1 col-xs-10 col-xs-offset-1">
        <h4> <i class="fa fa-info-circle" aria-hidden="true"></i> A bit more information </h4>
          <div class="form-group" id="more-info" >
            <%= f.input :knows_the_city, label: "How well does your friend know the city?", input_html: {class: "sliderknowledge"} %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-offset-1 col-xs-10 col-xs-offset-1">
          <div class="form-group">
            <%= f.input :budget, label: "What's his/her budget?", input_html: {class: "sliderbudget"} %>
          </div>
        </div>
      </div>
<!-- STATUS -->
      <h4> <i class="fa fa-suitcase" aria-hidden="true"></i> Select whether your friend is coming on his own or with company</h4>
      <div class="status-checkboxes">
        <div class="select-status">
          <i class="fa fa-male" aria-hidden="true"></i><br>
          Solo
          <%= f.input :status, as: :hidden, input_html: { value:"solo", disabled:true } %>
        </div>
        <div class="select-status">
          <i class="fa fa-male" aria-hidden="true"></i><i class="fa fa-child" aria-hidden="true"></i><i class="fa fa-child" aria-hidden="true"></i> <br>
          Family
          <%= f.input :status, as: :hidden, input_html: { value:"family", disabled:true } %>
        </div>

        <div class="select-status">
          <i class="fa fa-heart" aria-hidden="true"></i> <br>
          Couple
          <%= f.input :status, as: :hidden, input_html: { value:"couple", disabled:true } %>
        </div>

        <div class="select-status">
          <i class="fa fa-users" aria-hidden="true"></i> <br>
          Friends
          <%= f.input :status, as: :hidden, input_html: { value:"friends", disabled:true } %>
        </div>
      </div>
       <button class="next-btn" data-next="step3" data-set="circle3">Next</button>
       <button class="prev-btn" data-next="step1" data-set="circle1">Prev</button>
    </div>
<!-- PROFILES -->
    <div id="step3" class="step">
      <h4> <i class="fa fa-users" aria-hidden="true"></i> Choose 3 profiles to describe your friend (<span id="active-choices">0</span>/3)</h4>
      <div class="description-checkboxes">
        <div class="select-description" id="sight_seeing_adventurer">
          <i class="fa fa-camera-retro" aria-hidden="true"></i> <br>
          Sightseer Enthusiast
          <%= f.input :sight_seeing_adventurer, as: :hidden %>
        </div>
        <div class="select-description" id="art_lover">
          <i class="fa fa-paint-brush" aria-hidden="true"></i> <br>
          Art Lover
          <%= f.input :art_lover, as: :hidden %>
        </div>
        <div class="select-description" id="serial_shopper">
          <i class="fa fa-shopping-bag" aria-hidden="true"></i> <br>
          Serial Shopper
          <%= f.input :serial_shopper, as: :hidden %>
        </div>
        <div class="select-description" id="nature_lover">
          <i class="fa fa-leaf" aria-hidden="true"></i> <br>
          Nature Lover
          <%= f.input :nature_lover, as: :hidden %>
        </div>
        <div class="select-description" id="food_addict">
          <i class="fa fa-cutlery" aria-hidden="true"></i> <br>
          Food Addict
          <%= f.input :food_addict, as: :hidden %>
        </div>
        <div class="select-description" id="sport_lover">
          <i class="fa fa-futbol-o" aria-hidden="true"></i> <br>
          Sport Lover
          <%= f.input :sport_lover, as: :hidden %>
        </div>
        <div class="select-description" id="history_passionate">
          <i class="fa fa-university" aria-hidden="true"></i> <br>
          History Passionate
          <%= f.input :history_passionate, as: :hidden %>
        </div>
        <div class="select-description" id="tech_fan">
          <i class="fa fa-mobile" aria-hidden="true"></i> <br>
          Tech Fan
          <%= f.input :tech_fan, as: :hidden %>
        </div>
        <div class="select-description" id="relaxed">
          <i class="fa fa-hand-peace-o" aria-hidden="true"></i> <br>
          Relaxed
          <%= f.input :relaxed, as: :hidden %>
        </div>
        <div class="select-description" id="city_wanderer">
          <i class="fa fa-eye" aria-hidden="true"></i> <br>
          City Wanderer
          <%= f.input :city_wanderer, as: :hidden %>
        </div>
      </div>
      <div class="row trip-title-flex">
        <div class="col-xs-6 col-xs-offset-3">
          <div class="form-group">
            <%= f.input :title, label: "Finally, give a title to your trip", placeholder: "Hector's Trip To Paris" %>
          </div>
        </div>
      </div>
      <button class="prev-btn" data-set="step2" data-set="circle2">Prev</button>
      <%= f.submit "Choose Activities", id: "submit-trip", class: "btn btn-primary", disabled: true %>
    <% end %>
    </div>
  </div>
</div>


