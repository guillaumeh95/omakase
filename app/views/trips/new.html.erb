<div class="container">
  <%= simple_form_for [@trip] do |f| %>
    <%= f.input :title, placeholder: "Give a title to your trip" %>
    <%= f.input :knows_the_city, label: 'How well does your friend know the city?', input_html: {class: "sliderknowledge"} %>
    <%= f.input :budget, label: 'Budget. ',input_html: {class: "sliderbudget"} %>
    <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.input :status, :as => :radio_buttons, collection: ["solo", "family", "couple", "friends"], prompt: "Select a status" %>
    <h3> Your friend is...</h3>
    <div class="checkboxes">
      <input type="checkbox" class="form-checkbox" name="trip[sight_seeing_adventurer]" value="true" onclick="addClassCheck(this)"/> Sight Seeing Adventurer <br>
      <input type="checkbox" class="form-checkbox" name="trip[art_lover]" value="true" onclick="addClassCheck(this)"/> an Art Lover <br>
      <input type="checkbox" class="form-checkbox" name="trip[serial_shopper]" value="true" onclick="addClassCheck(this)"/> a Serial Shopper <br>
      <input type="checkbox" class="form-checkbox" name="trip[nature_lover]" value="true" onclick="addClassCheck(this)"/> a Nature Lover <br>
      <input type="checkbox" class="form-checkbox" name="trip[food_addict]" value="true" onclick="addClassCheck(this)"/> a Food Addict <br>
      <input type="checkbox" class="form-checkbox" name="trip[sport_lover]" value="true" onclick="addClassCheck(this)"/> a Sport Lover <br>
      <input type="checkbox" class="form-checkbox" name="trip[history_passionate]" value="true" onclick="addClassCheck(this)"/> a History Passionate <br>
      <input type="checkbox" class="form-checkbox" name="trip[tech_fan]" value="true" onclick="addClassCheck(this)"/> a Tech fan <br>
      <input type="checkbox" class="form-checkbox" name="trip[relaxed]" value="true" onclick="addClassCheck(this)"/> Relaxed <br>
      <input type="checkbox" class="form-checkbox" name="trip[city_wanderer]" value="true" onclick="addClassCheck(this)"/> a city wanderer <br>
    </div>
    <%= f.submit "Submit profile", class: "btn-secondary" %>
  <% end %>
</div>

<script type="text/javascript">
function addClassCheck(element){

    if(element.checked){
        element.classList.add("marked");
    }
    else
    {
        element.classList.remove("marked");
    }

    if(document.getElementsByClassName("marked").length>3){
      alert("Please select only three profiles");
        element.checked=false;
        element.classList.remove("marked");
    }

}
</script>


