<%= render 'shared/navbar' %>
<div class="container-show">
 <div class="show-content">
  <div class="show-button-container">
    <%= link_to dashboard_user_path(current_user), class: "btn btn-secondary" do %>
      <i class="fa fa-long-arrow-left"></i> Dashboard
    <% end %>
    <%= link_to 'Send'.html_safe,dashboard_user_path(current_user), class: "btn btn-primary" %>
  </div>
  <div class="show-header">
    <h4 class="show-title text-center" id="ouverture_show"><%= @trip.title %></h4>
    <h5 class="show-date text-center" ><%= @trip.date.strftime('%A %B %e, %Y') %></h5>
      <% if @trip.comment %>
        <div class="trip-comments">
          <p><%= @trip.comment %></p>
        </div>
      <% end %>
  </div>

  <div class="trip-summary-content">
    <div class="trip-summary">
      <div class="trip-host">
        <p><%= User.find(@trip.tourist_id).first_name %></p>
        <%= User.find(@trip.tourist_id).last_name%>
      </div>
    </div>

    <div class="trip-details">
      <% @trip.filters.each do |profile| %>
        <div class="trip-infos">
          <% fav_icon_names = {sight_seeing_adventurer: "camera-retro", art_lover: "paint-brush", serial_shopper: "shopping-bag", nature_lover: "cutlery", food_addict: "leaf", sport_lover: "futbol-o", history_passionate: "university", tech_fan: "mobile", relaxed: "hand-peace-o", city_wanderer: "eye"} %>
          <% fav_icon_names.each do |key, value| %>
            <% if key.to_s == profile %>
              <% faviconname = fav_icon_names[:"#{profile}"] %>
              <i class="fa fa-<%= faviconname %>" aria-hidden="true"></i>
            <% end %>
          <% end %>
          <p><%= profile.gsub('_', " ").split.map(&:capitalize).join(' ') %></p>
        </div>
      <% end %>
    </div>
  </div>

  <div class="trip-photos">
    <% markers = [] %> <!-- Initialize the variable markers outside the each -->
    <div class="modal-activities">
      <% @trip.visits.each do |visit| %>
        <% activity = visit.activity %>
        <div class="modal-activity">
          <div class="img-link"><%= image_tag activity.photo, class:"trip-photo" %></div>
          <div class="trip-title-modal"><h6><%= activity.title %></h6></div>
          <div class="trip-name"><h5><%= activity.name %></h5></div>
        </div>
        <% markers << { lat: activity.latitude, lng: activity.longitude } %>
      <% end %>
    </div>
  </div>

  <div class="map">
    <div id="floating-panel">
    <div id="warnings-panel"></div>
      <b>Mode of Travel: </b>
      <select id="mode">
        <option value="DRIVING">Driving</option>
        <option value="WALKING">Walking</option>
        <option value="BICYCLING">Bicycling</option>
        <option value="TRANSIT">Transit</option>
      </select>
    </div>
    <div class="trip-map" id="ouverture_modal" ></div>
      <div id="map" style="width: 100%; height: 600px;" data-markers="<%= markers.to_json %>"></div>
  </div>

  </div>
</div>

