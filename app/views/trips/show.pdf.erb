  <div class="pdf-map-content ">
     <div class="pdf-map">
    <img src="<%= @static_map %>" alt="">
    </div>
  </div>


  <div class="pdf-trip-summary">
    <div class="pdf-trip-host"><p> This map was created by <%= @trip.host.first_name %> <%= @trip.host.last_name %> for <%= User.find(@trip.tourist_id).first_name %> <%= User.find(@trip.tourist_id).last_name %></p></div>
    <div class="pdf-trip-details">
        <% @trip.filters.each do |profile| %>
          <div class="pdf-trip-infos">
          <%= image_tag "icons/history.png", {class: "trip-icons"}%>
          <p><%= profile.gsub('_', " ").split.map(&:capitalize).join(' ') %></p>
          </div>
        <% end %>
      <div class="pdf-trip-infos">
        <%= image_tag "icons/coins.png", {class: "trip-icons"}%>
        <p>Budget: <%= Trip::BUDGET[@trip.budget] %>
        </p>
      </div>

      <div class="pdf-trip-infos">
        <%= image_tag "icons/knowledge.png", {class: "trip-icons"}%>
        <p>Knows The City: <%= Trip::KNOWS_THE_CITY[@trip.knows_the_city] %>
        </p>
      </div>
      <div class="pdf-trip-infos">
        <%= image_tag "icons/solo.png", {class: "trip-icons"}%>
       <p><%= @trip.status %></p>
      </div>
    </div>
  </div>

   <div class="pdf-footer">
      <%= link_to 'Print'.html_safe,dashboard_user_path(current_user), class: "btn-pdf" %>
  </div>
</div>

